{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"moduleResolution": "node",
		"target": "esnext",
		"ignoreDeprecations": "5.0",
		"isolatedModules": true,
		"sourceMap": true,
		"outDir": "../../dist/out-tsc",
		"types": ["svelte", "node", "vite/client"],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"checkJs": true,
		"declaration": true,
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"vite.config.ts"
	],
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
